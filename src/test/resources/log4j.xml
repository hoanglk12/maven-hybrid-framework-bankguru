<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%d] %m%n" />
		</layout>
	</appender>

	<appender name="logfile" class="org.apache.log4j.FileAppender">
		<param name="File" value="./monitorLogs/NopCommerce.txt" />
		<param name="append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%d] %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="./monitorLogs/NopCommerce.log" />
		<param name="append" value="true" />
		<param name="maxFileSize" value="10MB" />
		<param name="maxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%d] %m%n" />
		</layout>
	</appender>

	<appender name="reportng" class="reportConfig.TestNGAppender">
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%d] %m%n" />
		</layout>
	</appender>
	
	<category name="com.nopcommerce.register">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.login">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.myaccount">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.search">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.sort">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.wishlist">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.nopcommerce.admin">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>

	<category name="com.bankguru.login">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>
	<category name="com.bankguru.customer">
		<priority value="all" />
		<appender-ref ref="console" />
		<appender-ref ref="logfile" />
		<appender-ref ref="file" />
		<appender-ref ref="reportng" />
	</category>

	<root>
		<priority value="warn" />
	</root>

</log4j:configuration>